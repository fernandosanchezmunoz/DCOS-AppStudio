 	<select onfocus="del(1)" onblur="undel()" onchange="typeChanged(document.getElementById('t1'))" id="t1" size="1" style="font-size: 32px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
